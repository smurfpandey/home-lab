[Unit]
Description=Service for youtubedl-material

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory={{ youtubedl_app_directory }}
ExecStart={{ docker_compose_binary }} up -d
ExecStop={{ docker_compose_binary }} stop
ExecReload={{ docker_compose_binary }} restart

[Install]
WantedBy=multi-user.target
