version: '3.2'

services:
  {{ rabbitmq_service_name }}:
    image: {{ rabbitmq_image_tag }}
    container_name: {{ rabbitmq_service_name }}
    hostname: {{ rabbitmq_service_name }}
    {% if rabbitmq_expose_on_host == true %}
    ports:
      - "{{ rabbitmq_port }}:5672/tcp"
    {% endif %}
    volumes:
      - "{{ rabbitmq_data_directory }}:/var/lib/rabbitmq"
